{
  "manifest_version": 3,
  "name": "Extension Against Phishing",
  "description": "Against Phishing browser extension prevents you against phishing based on blacklisted and whitelisted crypto related resources.",
  "version": "1.0",
  "homepage_url": "https://github.com/AgainstPhishing/extension-against-phishing",
  "permissions": ["storage", "unlimitedStorage", "webRequest", "webRequestBlocking", "alarms"],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": ["lib/psl.min.js", "against-blacklist.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{3a372b4e-4a30-413c-8eed-f786ebde37f1}"
    }
  }  
}
